<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="@drawable/whitebg_profile"
    android:elevation="6dp"
    android:layout_margin="3dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/productImagemycart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/graybackround"
            android:src="@drawable/pencombo"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/productNamemycart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jean Coat"
            android:fontFamily="@font/lato"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/productImagemycart"
            app:layout_constraintTop_toTopOf="@id/productImagemycart"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/quantityValuemycart1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45"
            android:textColor="#FFA500"
            android:layout_marginStart="8dp"
            android:textSize="14dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/productImagemycart"
            app:layout_constraintTop_toBottomOf="@id/productNamemycart"/>

        <TextView
            android:id="@+id/productPricemycart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$48"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@id/productImagemycart"
            app:layout_constraintBottom_toBottomOf="@id/productImagemycart"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/graybackround"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/quantityMinusmycart"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/black_circle"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/productImagemycart"
            app:layout_constraintEnd_toStartOf="@id/quantityValuemycart" />

        <TextView
            android:id="@+id/quantityValuemycart"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:fontFamily="@font/plus"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@id/productImagemycart"
            app:layout_constraintEnd_toStartOf="@id/quantityPlusmycart" />

        <TextView
            android:id="@+id/quantityPlusmycart"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/black_circle"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/productImagemycart"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

