<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/carduploadback"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:src="@drawable/borrderlines"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/file_upload"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/cx"
        app:layout_constraintBottom_toBottomOf="@+id/carduploadback"
        app:layout_constraintEnd_toEndOf="@+id/carduploadback"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/carduploadback"
        app:layout_constraintTop_toTopOf="@+id/carduploadback"
        app:layout_constraintVertical_bias="0.372" />


    <Button
        android:id="@+id/pdfupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="148dp"
        android:gravity="center_horizontal"
        android:text="PDFupload"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>