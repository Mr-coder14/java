<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/whitebg_profile"
        android:elevation="5dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="58dp"
                android:layout_height="58dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pdflogo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filenamerecyculeradmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PDF url" 
                    android:lines="1"
                    android:textSize="16sp"
                    android:fontFamily="@font/plus"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/namerecyculeradmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PDF url"
                    android:fontFamily="@font/plus"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/emailerecucyleradmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PDF url"
                    android:fontFamily="@font/plus"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amounterecucyleradmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PDF url"
                    android:fontFamily="@font/plus"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
