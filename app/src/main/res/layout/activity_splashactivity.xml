<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:background="@drawable/backspalsh"
        android:id="@+id/head"
        android:layout_weight="3"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to "
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="60dp"
            android:gravity="center"
            android:fontFamily="@font/playlistscript"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="100dp"
                app:lottie_rawRes="@raw/shops"
                android:id="@+id/shopss"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jasa Store"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/jasatxt"
                android:layout_gravity="center"
                android:fontFamily="@font/lato"
                />
        </LinearLayout>



    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Simplifying your stationery and printing needs!"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/plus"
        app:tint="@color/white" />

        
    
   
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:lottie_rawRes="@raw/shopdesign"
        android:layout_weight="8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head"
        android:id="@+id/shopdesign"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/rapcde1"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/rapcode"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Developed By RapCode"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:textSize="16dp"
            android:fontFamily="@font/lato"
            app:tint="@color/white" />
    </LinearLayout>







</LinearLayout>